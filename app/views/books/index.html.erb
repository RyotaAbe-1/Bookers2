<div class="container px-5 px-sm-0">
    
  <%= render "layouts/error_messages", user: @book %>
  
  <div class="row">

    <%= render "books/user_info", user: @user, book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |books| %>
            <tr>
              <td>
                <%= link_to user_path(books.user) do %>
                  <%= attachment_image_tag books.user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %>
                <% end %>
              </th>
              <td><%= link_to "#{books.title}", book_path(books) %></td>
              <td><%= books.body %></td>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>

  </div>
</div>