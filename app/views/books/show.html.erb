<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render "books/user_info", user: @book_detail.user, book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <th>
              <%= link_to user_path(@book_detail.user) do %>
                <%= attachment_image_tag @book_detail.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
                <br>
                <%= @book_detail.user.name  %>
              <% end %>
            </th>
            <td><%= link_to "#{@book_detail.title}", book_path(@book_detail) %></td>
            <td><%= @book_detail.body %></td>
            <% if @book_detail.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book_detail), class: "btn btn-success btn-sm" %></td>
              <td><%= link_to "Destroy", book_path(@book_detail), method: :delete, class: "btn btn-danger btn-sm" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>