<div class="container px-5 px-sm-0">
  <div class="row">
    
    <%= render "books/user_info", user: @user, book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2> Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th class="col-2">image</th>
            <th class="co-4">name</th>
            <th class="col-2"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, size: "40x40", fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>

  </div>
</div>